<div class="m-0 h-100">
  <div class="row h-100 position-relative">
    <div class="col-2 bg-light h-100 position-sticky top-0 shadow-sm">
      <div class="border-bottom m-3">
        <p class="m-0">Menu</p>
      </div>
      <div class="side-bar-items m-3">
        <h6><i class="fa-solid fa-qrcode pb-2"></i> My Bookings</h6>
        <h6><i class="fa-solid fa-money-bill pb-2"></i> My Hostings</h6>
        <h6> <i class="fa-regular fa-bell pb-2"></i> Notifications</h6>
        <h6> <i class="fa-solid fa-gear pb-2"></i> Settings</h6>
      </div>
    </div>
    <div class="col-10 h-100 overflow-scroll rounded">
      <% @bookings.each do |booking| %>
        <div class="card m-3 p-3 shadow-sm rounded">
          <div class="row justify-content-between border-bottom">
            <div class="col-6">
              <h5>Booking Info</h5>
            </div>
            <div class="col-6 text-right">
              <h5 class="text-end"> Contact Host</h5>
            </div>
          </div>
          <div class="row">
            <div class="col-3 mt-3">
              <div class="card">
                <%= booking.experience.photo.attached? ? cl_image_tag(booking.experience.photo.key, alt: "experience-image") : image_tag("https://source.unsplash.com/featured?adventure&#{rand(1000)}", alt: "experience-image") %>
              </div>
            </div>
            <div class="col-6">
              <div class="mt-3">
                <h4><%= booking.experience.title %></h4>
              </div>
              <h5>Description</h5>
              <p><%= booking.experience.description %></p>
              <div class="d-flex justify-content-between">
                <div>
                  <h5>Status</h5>
                  <p><%= booking.status %></p>
                </div>
                <div>
                  <h5>Start-Date</h5>
                  <p><%= booking.start_date %></p>
                </div>
                <div>
                  <h5>End-Date</h5>
                  <p><%= booking.end_date %></p>
                </div>
              </div>
            </div>
            <div class="col-3 border-start d-flex flex-column">
              <div>
                <div class="mt-3">
                  <h5>Price</h5>
                </div>
                <h6>$<%= booking.experience.price %></h6>
              </div>
              <div>
                <div class="mt-3">
                  <h5>Location</h5>
                </div>
                <p><%= booking.experience.location %></p>
              </div>
              <div>
                <div class="mt-3">
                  <h5>Category</h5>
                </div>
                <p><%= booking.experience.category %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
