<div class="container mt-3">
  <h1>Host an experience</h1>
  <%= simple_form_for @experience do |f| %>
    <%= f.input :title %>
    <%= f.input :location %>
    <%= f.input :category %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :photo, as: :file %>
    <%= f.submit 'Submit', class: "btn btn-outline-secondary mb-3" %>
  <% end %>
</div>
