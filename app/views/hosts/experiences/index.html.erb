<div class="m-0 h-100">
  <div class="row h-100 position-relative">
    <%= render 'shared/sidenav' %>
    <div class="col-10 h-100 overflow-scroll">
      <% @experiences.each do |experience| %>
        <div class="card m-3 p-3 shadow-sm">
          <div class="border-bottom d-flex justify-content-between align-items-center pb-3">
            <h5 class="m-0">Listing Info</h5>
            <%= link_to "Edit", edit_experience_path(experience), class: "btn btn-outline-secondary" %>
          </div>
          <div class="row">
            <div class="col-3 mt-3">
              <div class="card">
                <%= experience.photo.attached? ? cl_image_tag(experience.photo.key, alt: "experience-image", class: "card-img-top") : image_tag("https://source.unsplash.com/featured?adventure&#{rand(1000)}", alt: "experience-image", class: "card-img-top") %>
              </div>
            </div>
            <div class="col-6">
              <h4 class="mt-3"><%= experience.title %></h4>
              <h5>Description</h5>
              <p><%= experience.description %></p>
              <%= link_to "Listing details", experience_path(experience), class: "btn btn-outline-secondary" %>
            </div>
            <div class="col-3 border-start">
              <h5><i class="fa-solid fa-yen-sign mt-3"></i> <%= number_with_delimiter("#{experience.price}", :delimiter => ',') %></h5>
              <h5 class="mt-3"><i class="fa-solid fa-location-dot"></i> <%= experience.location %></h5>
              <h5 class="mt-3"><i class="fa-solid fa-tag"></i> <%= experience.category %></h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
