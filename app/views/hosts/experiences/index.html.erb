<div class="m-0 h-100">
  <div class="row h-100 position-relative">
    <%= render 'shared/sidenav' %>
    <div class="col-10 h-100 overflow-scroll rounded">
      <% @experiences.each do |experience| %>
        <div class="card m-3 p-3 shadow-sm rounded">
          <div class="row justify-content-between border-bottom">
            <div class="col-6">
              <h5>Listing Info</h5>
            </div>
            <div class="col-6 text-right">
              <h5 class="text-end">Edit</h5>
            </div>
          </div>
          <div class="row">
            <div class="col-3 mt-3">
              <div class="card">
                <%= experience.photo.attached? ? cl_image_tag(experience.photo.key, alt: "experience-image", class: "card-img-top") : image_tag("https://source.unsplash.com/featured?adventure&#{rand(1000)}", alt: "experience-image", class: "card-img-top") %>
              </div>
            </div>
            <div class="col-6">
              <div class="mt-3">
                <h4><%= experience.title %></h4>
              </div>
              <h5>Description</h5>
              <p><%= experience.description %></p>
              <%= link_to "Show requests", hosts_bookings_path, class: "btn btn-outline-secondary" %>
            </div>
            <div class="col-3 border-start d-flex flex-column">
              <div>
                <div class="mt-3">
                  <h5>Price</h5>
                </div>
                <h6><%= number_to_currency("#{experience.price}", {unit: 'Â¥', precision: 0}) %></h6>
              </div>
              <div>
                <div class="mt-3">
                  <h5>Location</h5>
                </div>
                <p><%= experience.location %></p>
              </div>
              <div>
                <div class="mt-3">
                  <h5>Category</h5>
                </div>
                <p><%= experience.category %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
